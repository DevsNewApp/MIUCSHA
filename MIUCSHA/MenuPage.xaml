    </Grid> 
  </StackLayout>
    
     <Grid Margin="20,130,20,20">       
    
    
    <Grid.ColumnDefinitions>
     
        <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="30" />
