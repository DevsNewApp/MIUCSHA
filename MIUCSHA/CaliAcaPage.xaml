<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             x:Class="MIUCSHA.CaliAcaPage">
     <StackLayout>
           <StackLayout VerticalOptions="End"  BackgroundColor="DarkBlue" HeightRequest="70" WidthRequest="500">
              <Grid Margin="5,5,20,20" >
               <Grid.ColumnDefinitions>
               <ColumnDefinition Width="50" />
               <ColumnDefinition Width="250" />
               <ColumnDefinition Width="50" />
               </Grid.ColumnDefinitions>
               <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="50" />
                <RowDefinition Height="70" />
                 <RowDefinition Height="50" />
                <RowDefinition Height="20" />
                 <RowDefinition Height="70" />
                 <RowDefinition Height="20" />
                 <RowDefinition Height="70" />
                 <RowDefinition Height="20" />
                <RowDefinition Height="70" />
                 <RowDefinition Height="50" />
             </Grid.RowDefinitions>
             <Image Source="NUcsh.png"
               Grid.Row="0" Grid.Column="0"   HorizontalOptions="Start" HeightRequest="32" WidthRequest="32" />
    
    
            <Label Grid.Row="0" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold" TextColor="Yellow"
             Text="ASISTENCIA ESTUDIANTES" />
                 <Image  Grid.Row="0" Grid.Column="2" Source="academi.png"   VerticalOptions="Start"  HeightRequest="50" WidthRequest="50" /> 
            
                <!-- StackLayout Grid.Column="1"
           Grid.Row="2">
                
                </-->



            </Grid>
       </StackLayout>     
    
 
          <Label   
          FontSize="Medium" FontAttributes="Bold" Text="  " >
 
       </Label>
        
        <Label   x:Name="Anio"
          FontSize="Medium"  HorizontalTextAlignment="Center" FontAttributes="Bold" Text=" 2020-1 " >
 
       </Label>
        <Label   x:Name="Mtitulo" HorizontalOptions="CenterAndExpand"
          FontSize="Medium" FontAttributes="Bold" Text="RECURSOS COMUNICATIVOS INTRODUCCION DE TEXTOS" >
 
       </Label>
         <Label Text="   " />
         <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>

            </Grid.ColumnDefinitions>
              <Label   Grid.Row="0" Grid.Column="0"
          FontSize="Medium" FontAttributes="Bold" Text="Fecha" >
            </Label>
                <Label   Grid.Row="0" Grid.Column="1"
          FontSize="Medium" FontAttributes="Bold" Text="Asignatura" >
            </Label>
            <DatePicker Grid.Row="1" Grid.Column="0" x:Name="XFecha"
          Format="dd/MM/yyyy"
            Date="09/02/2020"  DateSelected="XFecha_DateSelected" />
            <Picker x:Name="Xpicker" Grid.Row="1" Grid.Column="1"
                    Title="CCD01-7"
                    TitleColor="Blue"  SelectedIndexChanged="Xpicker_SelectedIndexChanged">
           
            </Picker>
        </Grid>
         <StackLayout x:Name="Chartdemo2">
        <forms:ChartView x:Name="Chartdemo1" HeightRequest="100" />
        <!-- Image Source="grafico.png" HorizontalOptions="Center"
                HeightRequest="78" WidthRequest="78" / -->
         </StackLayout>
         <StackLayout>
              <Grid  BackgroundColor="DarkBlue">

                     <Grid.RowDefinitions>
                       
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition   Width="60" />
                     <ColumnDefinition   Width="10" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="60" />
                       
                    
                    </Grid.ColumnDefinitions>
                  <Label x:Name="Numeroso" VerticalOptions="Start"  Grid.Row="0" 
                           Grid.Column="1" FontSize="Small"  TextColor="Yellow"
                           Text="No"
                           />
        <Label x:Name="Fechasa" VerticalOptions="Start"  Grid.Row="0" 
                           Grid.Column="2" FontSize="Small"  TextColor="Yellow"
                           Text="Nombre"
                           />
        <Label VerticalOptions="Center"  Grid.Row="0" 
                           Grid.Column="3" FontSize="Small"  TextColor="Yellow"
                           Text="Rut"
                           />
        <Label VerticalOptions="Center"  Grid.Row="0" 
                           Grid.Column="4" FontSize="Small"  TextColor="Yellow"
                           Text="Asiste"
                           />
                  

               
                </Grid>
             </StackLayout>
    <ListView  x:Name="Asistencias"  ItemTapped="Asistencias_ItemTapped" RowHeight = "70" ItemsSource="{Binding Asiste}"  >
   
       <ListView.ItemTemplate>
        <DataTemplate>
            <ViewCell  Height="65" >
                <Grid Padding="5">
                    <Grid.RowDefinitions>
                       
                        <RowDefinition Height="65" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                         <ColumnDefinition   Width="60" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="70" />
                         <ColumnDefinition Width="60" />
                         <ColumnDefinition Width="20" />
                       
                    </Grid.ColumnDefinitions>
                    <!-- Label IsVisible="{Binding Visible}" BackgroundColor="LightSkyBlue" Grid.Row="0"
                           Grid.Column="0"
                           Text="{Binding Asignatura}"
                             / -->
                    <!--ImageButton Grid.Row="1" Grid.Column="0" Source="Mensaje.jpg" Clicked="MsgClicked"
                    HorizontalOptions="Start"
                    VerticalOptions="CenterAndExpand" /-->

                    <Image Source="{Binding foto}" HeightRequest="50"  WidthRequest="50" Grid.Row="0"
                           Grid.Column="0"
                           
                           />
                     <Label VerticalOptions="Center" FontSize="Caption" FontAttributes="Bold" Grid.Row="0"
                           Grid.Column="1"
                           Text="{Binding num}"
                           />
                    
                    <Button VerticalOptions="Center" FontSize="Caption" BorderColor="Black" HeightRequest="50"  FontAttributes="Bold" Grid.Row="0"
                           Grid.Column="2"
                           Text="{Binding nombre}"
                           />
                   <Button Text="{Binding rut}"  Grid.Row="0"
                           Grid.Column="3" FontSize="Caption"   BorderColor="Black" HeightRequest="50"   HorizontalOptions="Center" VerticalOptions="Center" />

                     <Button Text="{Binding asiste}"  Grid.Row="0"
                           Grid.Column="4" FontSize="Caption"   BorderColor="Black"  HeightRequest="50"  HorizontalOptions="Center" VerticalOptions="Center" />
                   
                     <!--Label VerticalOptions="Center"  Grid.Row="0"
                           Grid.Column="3"
                           Text="{Binding Nota}"
                           / -->
                    
                </Grid>
            </ViewCell>
        </DataTemplate>
    </ListView.ItemTemplate>
           </ListView>

